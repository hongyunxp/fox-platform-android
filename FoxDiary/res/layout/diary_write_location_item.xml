<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diary_write_location_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/diary_write_location_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingTop="7dip" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_location_white" />

    <TextView
        android:id="@+id/diary_write_location_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diary_write_attachment_location_input_hint"
        android:textColor="@color/white"
        android:textSize="@dimen/h4" />

</LinearLayout>