<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diary_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/diary_line_header"
        style="@style/Header" >

        <LinearLayout
            android:id="@+id/diary_write_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pressed_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back_gray" />

            <ImageView
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginLeft="6dip"
                android:background="@drawable/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/diary_line_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/date_temp"
            android:textColor="@color/white"
            android:textSize="@dimen/header_title_font" />

        <ImageButton
            android:id="@+id/diary_line_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_pressed_bg"
            android:src="@drawable/icon_white_add_64_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="4dip"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:background="@color/diary_line_color" />

        <com.foxchan.foxdiary.core.widgets.RefreshListView
            android:id="@+id/diary_line_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"
            android:scrollbars="vertical" />
    </RelativeLayout>

</LinearLayout>