<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_contacter_item"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:orientation="horizontal"
    android:padding="4dip"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/select_contacter_item_photo"
        android:layout_width="53dip"
        android:layout_height="53dip"
        android:contentDescription="@string/sms_contactor_photo"
        android:src="@drawable/default_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/select_contacter_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/select_contacter_item_phone"
            android:layout_width="234dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="加载中..."
            android:textColor="@color/brief_color"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <CheckBox 
        android:id="@+id/select_contacter_item_check_box"
        android:layout_width="14dip"
        android:layout_height="14dip"
        android:background="@drawable/check_box"
        android:button="@null"
        android:layout_marginRight="34dip"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"/>

</LinearLayout>