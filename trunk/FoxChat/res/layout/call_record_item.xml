<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_record_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="5dip"
    android:paddingBottom="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/call_record_item_call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_call_in" />

        <TextView
            android:id="@+id/call_record_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/tip_loading"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/call_record_item_call_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_loading"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical">
        
        <TextView 
            android:id="@+id/call_record_item_call_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_gray_circle"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_size_12"
            android:gravity="center"
            android:padding="0dip"
            android:text="1"/>
        
        <TextView 
            android:id="@+id/call_record_item_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_size_12"
            android:layout_marginLeft="5dip"
            android:text="@string/tip_loading"/>
        
    </LinearLayout>

</LinearLayout>