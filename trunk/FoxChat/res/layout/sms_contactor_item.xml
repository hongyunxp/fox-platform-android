<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sms_contactor_item"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:orientation="horizontal"
    android:padding="4dip" >

    <ImageView
        android:id="@+id/sms_contactor_photo"
        android:layout_width="53dip"
        android:layout_height="53dip"
        android:contentDescription="@string/sms_contactor_photo"
        android:src="@drawable/default_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sms_contactor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/sms_contactor_sms_amount"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/sms_contactor_name"
                android:background="@drawable/balloon_bg"
                android:gravity="center"
                android:text="222222"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/sms_contactor_sms_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="昨天  20:30"
                android:textColor="@color/date_color"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sms_contactor_sms_brief"
            android:layout_width="234dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="加载中..."
            android:textColor="@color/brief_color"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dip"
        android:contentDescription="@string/sms_contactor_arrow"
        android:src="@drawable/icon_arrow_right" />

</LinearLayout>